#include<iostream>
using namespace std;

int n , m ;

int abs( int a ){ return a > 0 ? a : -a; }

int main()
{
  int i , e , ans ;
  cin>>n>>m;
  for( i = 1 ; i <= n ; ++ i )
    {
      cin>>s>>f>>t;
      e = t % ( 2 * m - 1 );
      ans = t + abs( s - e ) + abs( s - f );
      cout<<ans<<"\n";
    }
  return 0;
}
