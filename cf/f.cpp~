void init()
{
  int i; 
  cin>>m;
  memset( w , 0 , sizeof( w ) );
  for( i = 1 ; i < m ; ++ i )
    {
      cin>>u>>v;
      w[ u ][ ++ w[ u ][ 0 ] ] = v;
      w[ v ][ ++ w[ v ][ 0 ] ] = u;
    }
  return ;
}

